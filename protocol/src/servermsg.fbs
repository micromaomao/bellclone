include "base.fbs";

union ServerMessageInner {
  PlayerUpdate,
  PlayerDelete,
  Bell,
  YourIDIs,
}

table ServerMessage {
  msg: ServerMessageInner;
}

table PlayerUpdate {
  id: Uuid;
  pos: Vec2;
  vel: Vec2;
  score: Score;
}

table PlayerDelete {
  id: Uuid;
}

table Bell {
  pos: Vec2;
  size: float;
}

table YourIDIs {
  id: Uuid;
}

root_type ServerMessage;
