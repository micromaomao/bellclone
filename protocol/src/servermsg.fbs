include "base.fbs";

union ServerMessageInner {
  PlayerUpdate,
  PlayerDelete,
  Bells,
  YourIDIs,
}

table ServerMessage {
  msg: ServerMessageInner;
}

table PlayerUpdate {
  id: Uuid;
  pos: Vec2;
  vel: Vec2;
  score: Score;
}

table PlayerDelete {
  id: Uuid;
}

table Bells {
  bells: [Bell];
}

table Bell {
  pos: Vec2;
  vel: Vec2;
}

table YourIDIs {
  id: Uuid;
}

root_type ServerMessage;
